<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Add chance to spawn on tribal warrior (= sapper tribal because Tynan decided) -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[defName="Tribal_Warrior"]/weaponTags</xpath>
		<value>
			<li>CE_Boomspear</li>
		</value>
	</Operation>
	<!-- adjustment -->	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/PawnKindDef[defName="Tribal_Warrior"]/combatPower</xpath>
		<value>
			<combatPower>30</combatPower>
		</value>
	</Operation>


	<!-- patch CE Grenadier -->

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[defName="CE_Tribal_Grenadier"]/weaponTags</xpath>
		<value>
			<li>CE_Boomspear</li>
		</value>
	</Operation>


</Patch>